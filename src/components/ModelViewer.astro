---
interface Props {
  src: string;
  alt?: string;
}
const { src, alt } = Astro.props;
---

<model-viewer
  class="rounded-lg bg-zinc-200 dark:bg-zinc-800 overflow-hidden my-6"
  alt={alt}
  src={src}
  camera-controls></model-viewer>
<script
  type="module"
  src="https://ajax.googleapis.com/ajax/libs/model-viewer/4.0.0/model-viewer.min.js"
></script>
